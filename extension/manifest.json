{
  "manifest_version": 3,
  "name": "SilberArrows Car Filler (Test)",
  "version": "1.0.1",
  "description": "Auto-fill car listing forms with data from SilberArrows inventory",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3001/*",
    "https://*.silberarrows.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background-simple.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "src/popup-simple.html",
    "default_title": "Fill Car Data"
  }
}
