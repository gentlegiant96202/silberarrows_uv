{
  "manifest_version": 3,
  "name": "SilberArrows Consignment Creator",
  "version": "1.0.0",
  "description": "Extract car details from listing sites and create consignments in SilberArrows CRM",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://portal.silberarrows.com/*",
    "https://*.silberarrows.com/*",
    "https://*.dubizzle.com/*",
    "https://*.autotrader.ae/*",
    "https://*.cars24.com/*",
    "https://*.yallamotor.com/*",
    "https://*.olx.com/*",
    "https://*.dubicars.com/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
    "web_accessible_resources": [
      {
        "resources": ["src/carDataExtractor.js", "icons/main-logo.png", "icons/icon-16.png", "icons/icon-32.png", "icons/icon-48.png", "icons/icon-128.png"],
        "matches": ["<all_urls>"]
      }
    ],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Create Consignment",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
